!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title LaunchpadMovieTheater
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .ui.menu
      .header.item
        = link_to 'LaunchPad Movie Theater', root_path
      .item= link_to 'Edit Theater', theaters_path
      .item= link_to 'Edit Movies', movies_path
      .right.menu{class: "#{'hidden' unless current_page? root_path}"}
        .item
          .ui.action.left.icon.input
            -# %i.search.icon
            = form_tag root_path, method: :get, remote: true do
              =text_field_tag :title, nil, placeholder: 'Search'
              %button.ui.button Search
    .ui.container
      = yield
